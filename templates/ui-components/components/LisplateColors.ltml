{{fn (renderColor renderColors)
    <div className="colors">
        Hello {data::name}
        {renderColors data::colors renderColor}
    </div>
}
    {fn (color)
        <li className="color" style="background-color: {color}">
            {color}
        </li>
    }

    {fn (colors renderColor)
        {if colors.length {fn
            <ul>{colors.map renderColor}</ul>
        } {fn
            <div>No colors!</div>
        }}
   }
}