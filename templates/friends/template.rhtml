<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Friends</title>
</head>
<body>
    <div class="friends">
        <div class="friend" c:for="friend in data.friends">
            <ul>
                <li>Name: ${data.getFullNameRaptor(friend)}</li>
                <li>
                    Balance: ${friend.balance}
                </li>
                <li>
                    Age: ${friend.age}
                </li>
                <li>
                    Address: ${friend.address}
                </li>
                <li>
                    Image: <img src="${friend.picture}">
                </li>
                <li>
                    Company: ${friend.company}
                </li>
                <li>
                    Email: <a href="mailto:${friend.email}">${friend.email}</a>
                </li>
                <li>
                    About: ${friend.about}
                </li>
                <li c:if="notEmpty(friend.tags)">
                    Tags:
                    <ul>
                        <li c:for="tag in friend.tags">
                            ${tag}
                        </li>
                    </ul>
                </li>
                <li c:if="notEmpty(friend.friends)">
                    Friends:
                    <ul>
                        <li c:for="friend in friend.friends">
                            ${friend.name} (${friend.id})
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</body>
</html>