{#accounts}
    {@select key="{accountStatus}"}
        {@eq value="closed"}
            Your account has been closed!
        {/eq}
        {@eq value="suspended"}
            Your account has been temporarily suspended
        {/eq}
        {@default}
            Bank balance:
            <span class="{@if cond="{balance} < 0"}negative{/if}{@if cond="{balance} >= 0"}postive{/if}">{formattedBalance}</span>
        {/default}
    {/select}
{/accounts}